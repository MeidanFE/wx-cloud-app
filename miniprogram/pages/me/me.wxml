<!--index.wxml-->

  
<view class="header" >
  <image src="/images/night.jpg" class="bg-img" mode="widthFix"></image>
  <block wx:if="{{userInfo.avatarUrl}}">
    <view class="user">
      <image src="{{userInfo.avatarUrl}}" class="user-avatar"></image>
      <text class="user-name">{{userInfo.nickName}}</text>
    </view>
  </block>
  <button wx:else  class="login-btn"  bindgetuserinfo="onGetUserInfo" open-type="getUserInfo">
    <image src="./user-unlogin.png" class="user-avatar"></image>
    请登录
  </button>

  <view class="tip">
    <view class="tip-label">动态</view>
    <text class="tip-total">28</text><text class="tip-unit">个</text>
    <!-- <view class="tip-number">公开12个,悄悄话16个</view> -->
  </view>
  
</view>
<scroll-view class="tip-list" scroll-y>
  <tip-card class="tip-list-item"></tip-card>
  <tip-card></tip-card>
  <tip-card></tip-card>
  <tip-card></tip-card>
  <tip-card></tip-card>
  <tip-card></tip-card>
  <tip-card></tip-card>
  <tip-card></tip-card>
</scroll-view>


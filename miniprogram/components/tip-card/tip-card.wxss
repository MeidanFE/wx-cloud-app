/* components/tip-card/tip-card.wxss */
@import "../../style/color.wxss";

.tip{

  /* background: #000; */
 
  display: flex;
  align-items: center;
  color:#fff;
  width: 90vw;
  padding: 20rpx 30rpx;
  margin: 32rpx auto;
  box-sizing: border-box;
  background: rgba(255,255,255,.1);
  border-radius: 10rpx;
  border-left-width: 16rpx;
  border-left-style: solid;
}

.tip-content{
  flex:auto;
}

.tip-title{
  font-size: 36rpx;
  font-weight: 500;
  line-height: 2;
  color: #fff;
}

.tip-time{
  font-size: 28rpx;
  color: rgba(255,255,255,.6);
}

.star{
  width: 40rpx;
  height: 40rpx;
}





/* components/image-picker/image-picker.wxss */

.image-picker{
  display: grid;
  grid-template-columns: repeat(3,1fr);
  grid-gap: 34rpx;
  justify-content: center;
}

.image{
  position: relative;
  padding-top: 100%;

  background-repeat:no-repeat;
  background-position: center;
  background-size: cover;
}

.image-delete{
  position: absolute;
  top:0;
  right:0;
  transform: translate(30%,-30%);
  width: 50rpx;
  height:50rpx;
  border-radius: 999px;

  background:#fff url(data:image/png;base64,) no-repeat center /100%;
}

.add-btn{
  position: relative;
  padding-top: 100%;
  background-color: rgb(0,0,0,.4);
  
}

.add-btn-content{
  position: absolute;
  top:0;
  left:0;
  bottom:0;
  right: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.add-btn-icon{
  display: block;
  width: 36%;
  margin-bottom: 10rpx;
}

.add-btn-text{
  font-size: 24rpx;
  color: #fff;
}